{
  "name": "thunderbird-mail-merge",
  "version": "1.0.0",
  "description": "A Mail Merge extension for Thunderbird",
  "homepage": ".",
  "main": "src/index.js",
  "dependencies": {
    "@handsontable/react": "^2.1.0",
    "classnames": "^2.2.6",
    "easy-peasy": "1.7.1-alpha.0",
    "font-awesome": "^4.7.0",
    "handsontable": "^6.2.2",
    "nunjucks": "^3.1.7",
    "parse-numeric-range": "0.0.2",
    "react": "16.8.0-alpha.0",
    "react-dom": "16.8.0-alpha.0",
    "react-localization": "^1.0.13",
    "react-scripts": "^2.1.3",
    "xlsx": "^0.14.1"
  },
  "devDependencies": {
    "bestzip": "^2.1.2",
    "react-scripts-plugin-no-minify": "^0.3.2"
  },
  "scripts": {
    "start": "cd html-src && react-scripts start",
    "build": "cd html-src && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build-addon": "rm -rf addon && cp -rL thunderbird-src addon && cd addon && rm content/iframe-content/static/js/*.map && bestzip ../addon.zip *",
    "package-addon": "mv addon.zip mailmergep@example.net-latest.xpi && cp *xpi html-src/build/"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
